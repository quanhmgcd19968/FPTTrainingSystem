@model DemoProject1.ViewModel.TraineeCourseViewModel
@{
    ViewBag.Title = "AddTrainee";
}

<h2>Add Trainee to Course</h2>

@using (@Html.BeginForm("AddTrainee", "Course", FormMethod.Post))
{
    @Html.ValidationSummary( "", new { @class = "text-danger" })

    <div class="form-group">
        <label>Course</label>
        @Html.DropDownListFor(m => m.CourseId,
        new SelectList(Model.Courses, "Id", "Name"),
        new { @class = "form-control" }
        )
    </div>

    <div class="form-group">
        <label>Trainee</label>
        @Html.DropDownListFor(m => m.TraineeId,
       new SelectList(Model.Trainees, "TraineeId", "Name"),
       new { @class = "form-control" }
       )
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
}
